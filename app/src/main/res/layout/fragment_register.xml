<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08D9D6"
    tools:context=".RegisterFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#08D9D6"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="89dp"
            android:text="@string/make_registration_txt"
            android:textSize="20sp"
            android:id="@+id/registrationTxt"
            android:gravity="center_horizontal"
            android:textColor="#252A34"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/registrationTxt"
            android:hint="@string/name_register_edTxt"
            android:textSize="14sp"
            android:id="@+id/nameEdTxt"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameEdTxt"
            android:id="@+id/sexTxt"
            android:text="@string/sex_register_txt"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textSize="14sp"
            android:textColor="#252A34"

            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sexTxt"
            app:layout_constraintTop_toBottomOf="@+id/nameEdTxt"
            android:id="@+id/sexSpinner"
            android:layout_marginStart="64dp"
            android:scrollbarSize="14dp"
            android:entries="@array/sexOptions"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sexSpinner"
            android:id="@+id/universityTxt"
            android:text="@string/university_register_txt"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:textColor="#252A34"

            />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/universityTxt"
            app:layout_constraintTop_toBottomOf="@+id/sexSpinner"
            android:id="@+id/universitySpinner"
            android:layout_marginStart="32dp"
            android:scrollbarSize="14dp"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/universitySpinner"
            android:id="@+id/registrationEdTxt"
            android:hint="@string/registration_number_edTxt"
            android:inputType="number"
            android:textSize="14sp"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/registrationEdTxt"
            android:id="@+id/phoneEdTxt"
            android:hint="@string/phone_register_edTxt"
            android:inputType="phone"
            android:textSize="14sp"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/phoneEdTxt"
            android:id="@+id/emailRegEdTxt"
            android:hint="@string/email_register_edTxt"
            android:inputType="textEmailAddress"
            android:textSize="14sp"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleEnabled="true"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/emailRegEdTxt"
            android:id="@+id/passwordRegEdTxt"
            android:hint="@string/password_register_edTxt"
            android:inputType="textPassword"
            android:textSize="14sp"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleEnabled="true"
            android:theme="@style/TextAppearance.App.TextInputLayout"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegEdTxt"
            android:id="@+id/confirmPasswordRegEdTxt"
            android:hint="@string/confirm_password_register_edTxt"
            android:inputType="textPassword"
            android:textSize="14sp"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPasswordRegEdTxt"
            android:text="@string/register_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="72dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="80dp"
            android:id="@+id/confirmButton"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:text="@string/have_account_register_txt"
            android:layout_marginStart="105dp"
            android:textColor="#252A34"
            android:id="@+id/haveAccountTxt"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/haveAccountTxt"
            android:text="@string/login_register_txt"
            android:textColor="#FF2E63"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="4dp"
            android:id="@+id/loginTxt"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
